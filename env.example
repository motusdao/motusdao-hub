# Privy Configuration
NEXT_PUBLIC_PRIVY_APP_ID=your_privy_app_id_here

# ZeroDev Configuration (for smart wallet creation)
# Create a project in ZeroDev dashboard (Alfajores) and use that Project ID
# The same Project ID will work with Celo Mainnet in the code
NEXT_PUBLIC_ZERODEV_PROJECT_ID=your_zerodev_project_id_here

# ZeroDev Paymaster Mode (optional)
# Set to 'true' if using self-funded paymaster (requires CELO deposit to paymaster contract on Celo Mainnet)
# Set to 'false' or leave unset to use credit card billing (recommended, simpler)
# 
# IMPORTANT for Self-Funded Mode:
# - Your ZeroDev project is created on Alfajores (testnet) in the dashboard (free plan)
# - But you must deposit CELO to the paymaster contract on Celo Mainnet (chain 42220)
# - The paymaster contract address can be found in ZeroDev documentation
# - Verify the deposit on CeloScan: https://explorer.celo.org
NEXT_PUBLIC_ZERODEV_SELF_FUNDED=true

# Pimlico Paymaster Configuration (for gasless transactions)
# Get your API key from https://dashboard.pimlico.io
# This enables gasless transactions for smart wallets
NEXT_PUBLIC_PIMLICO_API_KEY=your_pimlico_api_key_here

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/motusdao_hub"

# Supabase Configuration
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
# Service role key (for server-side operations like file uploads)
# WARNING: Never expose this in client-side code!
SUPABASE_KEY=your_supabase_service_role_key

# OpenAI Configuration (for AI features)
OPENAI_API_KEY=your_openai_api_key

# Production Environment
NODE_ENV=production

# Celo Network Configuration
NEXT_PUBLIC_CELO_RPC_URL=https://forno.celo.org
NEXT_PUBLIC_CELO_CHAIN_ID=42220

# Optional: For development/testing
NEXT_PUBLIC_CELO_ALFAJORES_RPC_URL=https://alfajores-forno.celo-testnet.org
NEXT_PUBLIC_CELO_ALFAJORES_CHAIN_ID=44787
